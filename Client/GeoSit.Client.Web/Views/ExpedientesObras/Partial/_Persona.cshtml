@model GeoSit.Client.Web.Models.ExpedientesObras.PersonaViewModel

<div class="form-group">
    <label class="control-label col-xs-3">Rol</label>
    <div class="col-xs-9">
        @Html.DropDownListFor(model => model.IdRol, Model.RolList, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <label class="control-label col-xs-3">Persona</label>
    <div class="col-xs-9">
        <div class="input-group">
            @Html.HiddenFor(model => model.IdPersona)
            @Html.TextBoxFor(model => model.Persona, new {@class = "form-control", @readonly = "true"})
            <div class="input-group-btn">
                <button type="button" class="btn btn-default" onclick="personaSearch()" id="btn-persona-search"><span class="fa fa-search cursor-pointer"></span></button>
                @*<button type="button" class="btn btn-default" onclick="personaCall()" id="btn-persona-call"><span class="fa fa-user cursor-pointer"></span></button>*@
            </div>
        </div>
    </div>
</div>

@Html.HiddenFor(model => model.DomicilioFisico)

<span class="fa fa-2x fa-times-circle pull-right black cursor-pointer pull-right" aria-hidden="true" id="persona-cancel"></span>
<span class="fa fa-2x fa-check-circle pull-right black cursor-pointer pull-right" id="persona-submit"></span>