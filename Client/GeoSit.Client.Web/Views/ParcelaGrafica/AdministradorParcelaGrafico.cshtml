@using GeoSit.Data.BusinessEntities.ObjetosAdministrativos;

<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/admParcelaGrafica.css" rel="stylesheet" />

<div class="modal fade theme_new" id="modal-parcela-grafico" role="dialog" aria-hidden="true" data-backdrop="false" data-keyboard="false">
    @Html.AntiForgeryToken()
    <div class="modal-dialog modal-xlg">
        <div class="modal-content">
            <div class="scroll-content">
                <div class="modal-header">
                    <h3 class="modal-title">Administrador de Gr&aacute;ficos de Parcelas</h3>
                    <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
                </div>
                <div class="modal-body administrador-body">
                    <div class="body-content administrador-content">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="panel info info-alfanumerica">
                                    <div class="panel-body">
                                        <form class="buscador">
                                            <div class="nomenclatura">
                                                <div class="componente">
                                                    <label>DPTO</label>
                                                    <input name="departamento" placeholder="00" maxlength="2" pattern="^\d{0,2}$" class="form-control" />
                                                </div>
                                                <div class="componente">
                                                    <label>CIR</label>
                                                    <input name="circunscripcion" placeholder="000" maxlength="3" pattern="^\d{0,3}$" class="form-control" />
                                                </div>
                                                <div class="componente">
                                                    <label>SEC</label>
                                                    <input name="seccion" placeholder="00" maxlength="2" pattern="[a-zA-Z0-9]{1,2}" class="form-control" />
                                                </div>
                                                <div class="componente">
                                                    <label>CHA</label>
                                                    <input name="chacra" placeholder="0000" maxlength="4" pattern="[a-zA-Z0-9]{1,4}" class="form-control" />
                                                </div>
                                                <div class="componente">
                                                    <label>QUI</label>
                                                    <input name="quinta" placeholder="0000" maxlength="4" pattern="[a-zA-Z0-9]{1,4}" class="form-control" />
                                                </div>
                                                <div class="componente">
                                                    <label>FRA</label>
                                                    <input name="fraccion" placeholder="0000" maxlength="4" pattern="[a-zA-Z0-9]{1,4}" class="form-control" />
                                                </div>
                                                <div class="componente">
                                                    <label>MZA</label>
                                                    <input name="manzana" placeholder="0000" maxlength="4" pattern="[a-zA-Z0-9]{1,4}" class="form-control" />
                                                </div>
                                                <div class="componente">
                                                    <label>PAR</label>
                                                    <input name="parcela" placeholder="00000" maxlength="5" pattern="[a-zA-Z0-9]{1,5}" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-buttons">
                                                <button class="btn btn-default" type="submit"><i class="fa-lg fa fa-search"></i></button>
                                            </div>
                                            @*<div class="input-group">
                                                    <input type="text" class="form-control" placeholder="Buscar por nomenclatura o partida...">
                                                    <span class="input-group-btn">
                                                        <button class="btn btn-default" type="submit"><i class="fa-lg fa fa-search"></i></button>
                                                        <button class="btn btn-default" type="reset"><i class="fa-lg fa fa-trash"></i></button>
                                                    </span>
                                                </div>*@
                                        </form>
                                        <div class="resultados tabla-con-botones">
                                            <table id="grilla" class="table table-striped table-condensed table-bordered table-responsive"></table>
                                            <dl>
                                                <dt><span title="Desasociar" id="btnDesasociar" class="hidden"><i class="fa fa-unlink fa-2x black"></i></span></dt>
                                                <dt><span title="Asociar" id="btnAsociar" class="hidden"><i class="fa fa-link fa-2x black"></i></span></dt>
                                            </dl>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="panel info info-grafica">
                                    <div class='panel-heading bg-primary main-heading'>
                                        <a href="javascript:void(0)">
                                            <div class='panel-title'>
                                                Mapa
                                                <div class="col-xs-2 pull-right text-right remove-padding">
                                                    <span class="fa fa-search fa-lg cursor-pointer" id="btnBuscarObjetoReferencia"></span>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                    <div id="panel-mapa" class="panel-collapse collapse main-collapse in panel-mapa">
                                        <div class="panel-body">
                                            <div id="map-tag"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="formulario-externo-parcela-grafica"></div>

<div class="modal fade theme_new mensaje" id="modal-info-administrador" tabindex="-3" role="dialog" aria-labelledby="TituloInfoAdministrador" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="TituloInfoAdministrador">Titulo</h3>
                <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
            </div>
            <div class="modal-body">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <p>Descripcion de la informacion</p>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-4 pull-right">
                    <span role="button" aria-hidden="true" data-dismiss="modal" title="Seleccionar" class="fa fa-check-circle fa-3x light-blue cursor-pointer"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.js"></script>
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/ParcelaGrafica/service.js"></script>
<script src="~/Scripts/ParcelaGrafica/store.js"></script>
<script src="~/Scripts/ParcelaGrafica/main.js"></script>


<script>
    AdministradorParcelasGraficosController("#modal-parcela-grafico", createStore(createService()))
</script>