@model GeoSit.Client.Web.Models.WebLinksModels
@{
    ViewBag.Title = "Links a otros sitios";
}

<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/weblinks.css" rel="stylesheet" />

<div class="modal fade theme_new links" id="modal-window-weblinks" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="modal-windowLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="scroll-content-weblinks" class="scroll-content">
                <div class="modal-header">
                    <h3 class="modal-title col-xs-11" id="lblModalweblinks">@ViewBag.Title</h3>
                    <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
                </div>
                <div class="modal-body weblinks-body">
                    <div id="body-content-weblinks" class="body-content">
                        <div class="panel-group accordion" id="accordion-weblinks">
                            @*Inicio Web Links*@
                            <div class='panel-heading bg-primary main-heading' role='tab' id='headingweblinks' style="pointer-events:none">
                                <a data-toggle='collapse' data-parent='#accordion-weblinks' href='#' aria-expanded='true'>
                                    <div class='panel-title'>
                                        Lista de Links
                                    </div>
                                </a>
                            </div>
                            <div id="collapseweblinks" class='panel-collapse collapse in main-collapse'>
                                <div class="panel-body weblinks-datos" style="margin-top: 0px; margin-bottom: 0; padding-top: 5px; padding-bottom: 0px;">
                                    <div class="col-xs-12">
                                        <table id="Grilla_WebLinks" class="table table-striped table-bordered table-responsive">
                                            <thead>
                                                <tr>
                                                    <th class="hide"></th>
                                                    <th class="hide"> Sitios</th>
                                                    <th class="hide"> URL</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    foreach (var item in ViewBag.DatosWebLinks)
                                                    {
                                                        long itemidLink = item.idLink;
                                                        string itemDescripcion = item.Descripcion;
                                                        string itemURL = item.URL;
                                                        {

                                                            <tr>
                                                                <td class="hide">@itemidLink</td>
                                                                <td>Sitios de Inter&eacute;s</td>
                                                                <td> <a style="padding-left: 10px" href=@itemURL target="_blank">@itemDescripcion</a> </td>
                                                            </tr>
                                                        };

                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            @*Fin Datos*@
                        </div>
                    </div>
                </div>
                @*Fin de modal-body*@
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.dataTables.js"></script>
<script src="~/Scripts/SubSistemaWEB/WebLinks/main.js"></script>