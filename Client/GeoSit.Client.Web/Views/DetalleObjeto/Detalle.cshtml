@model GeoSit.Client.Web.Models.DetalleObjetoConfig
@{
    string bgclass = "bg-primary";
    if (Model.minimiza)
    {
        bgclass = "bg-primary-2";
    }
}
<div id="detalle-objeto-@Model.id" class="datos-adicionales panel panel-primary collapse" aria-expanded="false" style="position: absolute; width: 100%">
    <div class="row">
        @if (Model.cierra)
        {
            <div class="detalle-objeto-header">
                <span>Detalle de Objeto</span>
                <a class="reset-search-btn fa pull-right " href="#" data-placement="right">
                    @if (Model.minimiza)
                    {
                        <i class="minimizar fa fa-chevron-up white cursor-pointer" aria-label="Minimizar" title="Minimizar"></i>
                    }
                    <i class="cerrar fa-close white cursor-pointer" title="Cerrar"></i>
                </a>
            </div>
        }
        <div id="accordion-detalle-objeto-@Model.id" class="datos-detalle">
            <!-- DETALLE OBJETO - ATRIBUTOS -->
            <div class="section-position">
                <div class='panel-heading @bgclass' role='tab' id='headingAtributos-@Model.id'>
                    <a data-toggle='collapse' data-parent='#accordion-detalle-objeto-@Model.id' href='#collapseAtributos-@Model.id' aria-expanded='false'
                       aria-controls='collapseAtributos-@Model.id' class="collapsed">
                        <div class='panel-title'>
                            Atributos
                            <div class="pull-right">
                                @if (Model.edita)
                                {
                                    <i class="editarAtributos fa fa-pencil"></i>
                                }
                                <i class="fa"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div id='collapseAtributos-@Model.id' class='panel-collapse collapse' role='tabpanel' aria-labelledby='headingAtributos-@Model.id'>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-responsive grilla-atributos" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th width="50%">Nombre</th>
                                    <th width="50%">Valor</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- DETALLE OBJETO - RELACIONES -->
            <div class="section-position">
                <div class='panel-heading @bgclass' role='tab' id='headingRelacionesGC'>
                    <a data-toggle='collapse' data-parent='#accordion-detalle-objeto-@Model.id' href='#collapseRelaciones-@Model.id' aria-expanded='false'
                       aria-controls='collapseRelaciones-@Model.id' class="collapsed">
                        <div class='panel-title'>
                            Relaciones
                            <div class="pull-right">
                                <i class="fa"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div id='collapseRelaciones-@Model.id' class='panel-collapse collapse' role='tabpanel' aria-labelledby='headingRelaciones-@Model.id'>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-responsive grilla-relaciones" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    @if (Model.extraFieldsRelaciones)
                                    {
                                        <th width="40%">Nombre</th>
                                        <th width="45%">Valor</th>
                                        <th width="15%"></th>
                                    }
                                    else
                                    {
                                        <th width="50%">Nombre</th>
                                        <th width="50%">Valor</th>
                                    }
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- DETALLE OBJETO - GRAFICOS -->
            <div class="section-position">
                <div class='panel-heading @bgclass' role='tab' id='headingGraficos-@Model.id'>
                    <a data-toggle='collapse' data-parent='#accordion-detalle-objeto-@Model.id' href='#collapseGraficos-@Model.id' aria-expanded='false'
                       aria-controls='collapseGraficos-@Model.id' class="collapsed">
                        <div class='panel-title'>
                            Gr&aacute;ficos
                            <div class="pull-right">
                                <i class="fa"></i>
                            </div>
                        </div>
                    </a>
                </div>
                <div id='collapseGraficos-@Model.id' class='panel-collapse collapse' role='tabpanel' aria-labelledby='headingGraficos-@Model.id'>
                    <div class="panel-body">
                        <div class="tabsGraficos">
                            <ul class="nav nav-tabs">
                                <li data-tipo-grafico="1">
                                    <a href="" data-target="#datosGraficosPoligonos-@Model.id" data-toggle="tab">Pol&iacute;gonos</a>
                                </li>
                                <li data-tipo-grafico="2">
                                    <a href="" data-target="#datosGraficosLineas-@Model.id" data-toggle="tab">L&iacute;neas</a>
                                </li>
                                <li class="active" data-tipo-grafico="3">
                                    <a href="" data-target="#datosGraficosPuntos-@Model.id" data-toggle="tab">Puntos</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane" id="datosGraficosPoligonos-@Model.id">
                                    <table data-tipo-grafico="1" class="table table-striped table-bordered table-responsive" cellspacing="0" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th width="50%">Nombre</th>
                                                <th width="50%">Valor</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                    <div class="col-sm-12 grafico-wrapper">
                                        <img data-tipo-grafico="1">
                                    </div>
                                </div>
                                <div class="tab-pane" id="datosGraficosLineas-@Model.id">
                                    <table data-tipo-grafico="2" class="table table-striped table-bordered table-responsive" cellspacing="0" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th width="50%">Nombre</th>
                                                <th width="50%">Valor</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                    <div class="col-sm-12 grafico-wrapper">
                                        <img data-tipo-grafico="2">
                                    </div>
                                </div>
                                <div class="tab-pane active" id="datosGraficosPuntos-@Model.id">
                                    <table data-tipo-grafico="3" class="table table-striped table-bordered table-responsive" cellspacing="0" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th width="50%">Nombre</th>
                                                <th width="50%">Valor</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                    <div class="col-sm-12 grafico-wrapper">
                                        <img data-tipo-grafico="3">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
