@model GeoSit.Client.Web.Models.FormularioUModel

<div id="Rubro1IncB" class="panel remove-margin remove-shadow">
    <div class="col-xs-12 remove-padding">
        <div class="panel-title">
            <h4 class="title-border"><strong>Rubro 1</strong></h4>
        </div>
        <div class="panel-body">
            <div class="row" style="margin: 0;margin-left: 15px;">
                <h5><strong>Inc. B</strong></h5>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">Calle</label>
                    <div class="col-xs-4">
                        @Html.HiddenFor(x => x.DDJJDesignacion.IdCalle)
                        <div class="input-group">

                            @Html.TextBoxFor(x => x.DDJJDesignacion.Calle, new { @class = "form-control", @readonly = true })
                            <div id="btnBuscarCalles" class="input-group-addon cursor-pointer @(Model.ReadOnly?"boton-deshabilitado": string.Empty)">
                                <span class="fa fa-lg fa-search"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">N&uacute;mero</label>
                    <div class="col-xs-4">
                        @Html.TextBoxFor(x => x.DDJJDesignacion.Numero, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">Chacra</label>
                    <div class="col-xs-4">
                        @Html.TextBoxFor(x => x.DDJJDesignacion.Chacra, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">Fracci&oacute;n</label>
                    <div class="col-xs-4">
                        @Html.TextBoxFor(x => x.DDJJDesignacion.Fraccion, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">Manzana</label>
                    <div class="col-xs-4">
                        @Html.HiddenFor(x => x.DDJJDesignacion.IdManzana)
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.DDJJDesignacion.Manzana, new { @class = "form-control", @readonly = true })
                            <div id="btnBuscarManzanas" class="input-group-addon cursor-pointer @(Model.ReadOnly?"boton-deshabilitado": string.Empty)">
                                <span class="fa fa-lg fa-search"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <!--<div class="form-group">
                    <label class="col-xs-5 control-label text-right">Parcela</label>
                    <div class="col-xs-4">
                        @*@Html.TextBoxFor(x => x.DDJJDesignacion.Lote, new { @class = "form-control" })*@
                    </div>
                </div>-->
            </div>
        </div>
    </div>
</div>