@model GeoSit.Client.Web.Models.FormularioE2Model

<div id="urlActionGetDeclaracionesJuradas" data-request-url="@Url.Action("GetDeclaracionesJuradas", "DeclaracionesJuradas")"></div>

<div id="Cabecera" class="panel remove-margin remove-shadow">
    <div class="col-xs-12 remove-padding">
        <div class="panel-title">
            <h4 class="title-border"><strong>Cabecera</strong></h4>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                @if (!string.IsNullOrEmpty(Model.PartidaInmobiliaria))
                {
                    <div class="form-group">
                        <label class="col-xs-5 control-label text-right">Partida Inmobiliaria</label>
                        <div class="col-xs-4">
                            <p class="form-control-static">@Html.DisplayTextFor(x => x.PartidaInmobiliaria)</p>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">Destino del edificio</label>
                    <div class="col-xs-4">
                        @Html.DropDownListFor(x => x.Mejora.IdDestinoMejora, Model.DestinoEdificio, "- Seleccione -", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">Vigencia</label>
                    <div class="col-xs-4">
                        @Html.TextBoxFor(x => x.DDJJ.FechaVigencia, "{0:dd/MM/yyyy}", new { @class = "form-control fecha-vigencia", @readonly = "readonly" })
                    </div>
                </div>
                @if (!(bool)ViewData["EsTemporal"])
                {
                    <div class="form-group">
                        <label class="col-xs-5 control-label text-right">Fecha de Baja</label>
                        <div class="col-xs-4">
                            @Html.TextBoxFor(x => x.DDJJ.FechaBaja, "{0:dd/MM/yyyy}", new { @class = "form-control fecha-baja", @readonly = "readonly" })
                        </div>
                    </div>
                }
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">ID Pol&iacute;gono s/Mensura</label>
                    <div class="col-xs-4">
                        @Html.TextBoxFor(x => x.DDJJ.IdPoligono, new { @class = "form-control" })
                    </div>
                </div>
                @if (!(bool)ViewData["EsTemporal"])
                {
                    <div class="form-group">
                        <label class="col-xs-5 control-label text-right">Tr&aacute;mite</label>
                        <div class="col-xs-4">
                            @Html.TextBoxFor(x => x.Tramite.Numero, new { @class = "form-control", @readonly = true })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>