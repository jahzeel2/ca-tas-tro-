@model GeoSit.Client.Web.Models.FormularioSoRModel

<div id="Cabecera" class="panel remove-margin remove-shadow">
    <div class="col-xs-12 remove-padding">
        <div class="panel-title">
            <h4 class="title-border"><strong>Cabecera</strong></h4>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                @if (!string.IsNullOrEmpty(Model.PartidaInmobiliaria))
                {
                    <div class="form-group">
                        <label class="col-xs-5 control-label text-right">Partida Inmobiliaria</label>
                        <div class="col-xs-4">
                            <p class="form-control-static">@Html.DisplayTextFor(x => x.PartidaInmobiliaria)</p>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">Departamento</label>
                    <div class="col-xs-4">
                        @if (Model.DDJJDesignacion != null && Model.DDJJDesignacion.IdDepartamento != null)
                        {
                            string departamento = Model.Departamentos.First(x => x.Value == Model.DDJJDesignacion.IdDepartamento.ToString()).Text;

                            @Html.HiddenFor(x => x.DDJJDesignacion.IdDepartamento)
                            @Html.TextBox("DDJJDesignacion.Departamento", departamento, new { @class = "form-control", @readonly = "readonly" })
                        }
                        else
                        {
                            @Html.HiddenFor(x => x.DDJJDesignacion.Departamento)
                            @Html.DropDownListFor(x => x.DDJJDesignacion.IdDepartamento, Model.Departamentos, "- Seleccione -", new { @class = "form-control" })
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">Localidad / Colonia</label>
                    <div class="col-xs-4">
                        @if (Model.DDJJDesignacion != null && Model.DDJJDesignacion.IdLocalidad != null)
                        {
                            string localidad = string.IsNullOrEmpty(Model.DDJJDesignacion.Localidad) ?
                                                  Model.Localidades.First(x => x.Value == Model.DDJJDesignacion.IdLocalidad.ToString()).Text :
                                                  Model.DDJJDesignacion.Localidad;

                            @Html.HiddenFor(x => x.DDJJDesignacion.IdLocalidad)
                            @Html.TextBox("DDJJDesignacion.Localidad", localidad, new { @class = "form-control", @readonly = "readonly" })
                        }
                        else
                        {
                            @Html.HiddenFor(x => x.DDJJDesignacion.Localidad)
                            @Html.DropDownListFor(x => x.DDJJDesignacion.IdLocalidad, Model.Localidades, "- Seleccione -", new { @class = "form-control" })
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">Vigencia</label>
                    <div class="col-xs-4">
                        @Html.TextBoxFor(x => x.DDJJ.FechaVigencia, "{0:dd/MM/yyyy}", new { @class = "form-control fecha-vigencia", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-5 control-label text-right">ID Pol&iacute;gono s/Mensura</label>
                    <div class="col-xs-4">
                        @Html.TextBoxFor(x => x.DDJJ.IdPoligono, new { @class = "form-control" })
                    </div>
                </div>
                @if (!(bool)ViewData["EsTemporal"])
                {
                    <div class="form-group">
                        <label class="col-xs-5 control-label text-right">Tr&aacute;mite</label>
                        <div class="col-xs-4">
                            @Html.TextBoxFor(x => x.Tramite.Numero, new { @class = "form-control", @readonly = true })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

