<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/valuaciones.css" rel="stylesheet" />

@Html.AntiForgeryToken()
<div class="modal fade theme_new" id="modal-valuaciones" role="dialog" aria-hidden="true" data-backdrop="false" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="scroll-content">
                <div class="modal-header">
                    <h3 class="modal-title">Administraci&oacute;n de Valuaciones</h3>
                    <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
                </div>
                <div class="modal-body valuaciones-body">
                    <div class="body-content valuaciones-content">
                        <p>Partida: <strong>@ViewData["PartidaInmobiliaria"].ToString()</strong></p>
                        <div class="panel-group">
                            <div class="panel remove-shadow">
                                <div class="panel-title">
                                    <h3><strong>Valuaciones</strong></h3>
                                </div>
                                <div class="panel-body">
                                    <div class="row remove-margin">
                                        <div class="col-xs-12 remove-padding">
                                            <ul id="tabFormularios" class="nav nav-tabs">
                                                <li class="nav-item active" data-tab="valuacionVigente">
                                                    <a class="nav-link" href="#tabValuacionVigente" data-toggle="tab">Vigente</a>
                                                </li>
                                                <li class="nav-item" data-tab="valuacionesHistoricas">
                                                    <a class="nav-link" href="#tabValuacionesHistoricas" data-toggle="tab">Hist&oacute;ricas</a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div id="tabValuacionVigente" class="tab-pane active">
                                                    <div class="tab-body panel">
                                                        <div class="panel-body">
                                                            @Html.Hidden("IdUnidadTributaria", ViewData["IdUnidadTributaria"].ToString())
                                                            <div class="form-horizontal">
                                                                <div class="form-group col-xs-6">
                                                                    <label class="col-xs-5 control-label text-right">Valor Tierra</label>
                                                                    <div class="col-xs-7">
                                                                        @Html.TextBox("ValorTierra", "", new { @class = "form-control", @readonly = true })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group col-xs-6">
                                                                    <label class="col-xs-5 control-label text-right">Valor Fiscal Total</label>
                                                                    <div class="col-xs-7">
                                                                        @Html.TextBox("ValorFiscalTotal", "", new { @class = "form-control", @readonly = true })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group col-xs-6">
                                                                    <label class="col-xs-5 control-label text-right">Vigencia Desde</label>
                                                                    <div class="col-xs-7">
                                                                        @Html.TextBox("VigenciaValorFiscalTotal", "", new { @class = "form-control", @readonly = true })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="panel-footer">
                                                            <span id="btnImprimirHistoricoValuaciones" aria-hidden="true" data-placement="right" title="Imprimir" data-original-title="Imprimir" class="fa fa-print fa-2x black cursor-pointer"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="tabValuacionesHistoricas" class="tab-pane">
                                                    <div class="tab-body panel">
                                                        <div class="panel-body">
                                                            <div class="tabla-con-botones">
                                                                <table id="grillaValuacionesHistoricas" class="table table-striped table-condensed table-bordered table-responsive"></table>
                                                                <dl>
                                                                    <dt><span data-edita="existente" id="btnImprimirNoVigente" class="fa fa-print fa-2x disabled"></span></dt>
                                                                </dl>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="panel remove-shadow">
                                <div class="panel-title">
                                    <h3><strong>Formularios</strong></h3>
                                </div>
                                <div class="panel-body">
                                    <div class="row remove-margin">
                                        <div class="col-xs-12 remove-padding">
                                            <ul id="tabFormularios" class="nav nav-tabs">
                                                <li class="nav-item active" data-tab="formularioVigente">
                                                    <a class="nav-link" href="#tabFormularioVigente" data-toggle="tab">Vigentes</a>
                                                </li>
                                                <li class="nav-item" data-tab="formulariosNoVigentes">
                                                    <a class="nav-link" href="#tabFormulariosNoVigentes" data-toggle="tab">No Vigentes</a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div id="tabFormularioVigente" class="tab-pane active">
                                                    <div class="tab-body remove-padding">
                                                        <div class="tabla-con-botones">
                                                            <table id="grillaFormularioVigente" class="table table-striped table-condensed table-bordered table-responsive"></table>
                                                            <dl>
                                                                @if ((bool)ViewData["Editable"])
                                                                {
                                                                    <dt><span data-edita="nuevo" id="btnAgregar" class="fa fa-plus-circle fa-2x"></span></dt>
                                                                }
                                                                <dt><span data-edita="existente" id="btnVerFormulario" class="fa fa-search fa-2x disabled"></span></dt>
                                                                <dt><span data-edita="existente" id="btnImprimirFormulario" class="fa fa-print fa-2x disabled"></span></dt>
                                                            </dl>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="tabFormulariosNoVigentes" class="tab-pane">
                                                    <div class="tab-body remove-padding">
                                                        <div class="tabla-con-botones">
                                                            <table id="grillaFormulariosHistoricos" class="table table-striped table-condensed table-bordered table-responsive"></table>
                                                            <dl>
                                                                <dt><span data-edita="existente" id="btnVerFormularioHistorico" class="fa fa-search fa-2x disabled"></span></dt>
                                                                <dt><span data-edita="existente" id="btnImprimirFormularioHistorico" class="fa fa-print fa-2x disabled"></span></dt>
                                                            </dl>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="contenido-formulario" />

<div class="modal fade theme_new mensaje" id="ModalInfoValuaciones" tabindex="-3" role="dialog" aria-labelledby="TituloInfoValuaciones" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="TituloInfoValuaciones">Titulo</h3>
                <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
            </div>
            <div class="modal-body">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <p id="DescripcionInfoValuaciones">Descripcion de la informacion</p>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-4 pull-right">
                    <span id="btnInfoValuacionesOK" aria-hidden="true" data-dismiss="modal" title="Seleccionar" class="fa fa-check-circle fa-3x light-blue cursor-pointer"></span>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.js"></script>
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/Valuaciones/main.js"></script>

