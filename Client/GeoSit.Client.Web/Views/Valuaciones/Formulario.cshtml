@using GeoSit.Client.Web.Models.FormularioValuacion;
@model FormularioValuacionModel

<div class="modal fade theme_new" id="modal-formulario-valuacion" role="dialog" aria-hidden="true" data-backdrop="false" data-keyboard="false">
    @Html.AntiForgeryToken()
    <form id="form-valuacion">
        <div class="modal-dialog modal-xlg">
            <div class="modal-content">
                <div class="scroll-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Formulario de Valuaci&oacute;n</h3>
                        <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
                    </div>
                    <div class="modal-body formulario-body">
                        <div class="body-content formulario-content">
                            <div class="row">
                                <div class="col-xs-5">
                                    <div class="superficies-container panel-group col-xs-9">
                                        @*Uso el path completo porque al llamarlo desde el controller de Mesa de Entradas no lo encuentra si uso el path relativo*@
                                        @{Html.RenderPartial("~/Views/Valuaciones/ResumenSuperficiesRurales.cshtml", Model);}
                                    </div>
                                    <div class="panel-group col-xs-3">
                                        <div class="panel">
                                            <div class="panel-header">&nbsp;</div>
                                            <div class="panel-body superficie-valuada componente">
                                                <label>Zona Ecol&oacute;gica</label>
                                                <input readonly="readonly" type="number" value="@Model.ZonaEcologica" />
                                            </div>
                                        </div>
                                        <div class="panel">
                                            <div class="panel-header">&nbsp;</div>
                                            <div class="panel-body puntaje-valuado componente">
                                                <label>Puntaje Sup. Total</label>
                                                <input readonly="readonly" type="number" value="" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-7">
                                    <div class="panel">
                                        <div class="panel-body">
                                            <div class="tabla-con-botones">
                                                <table id="grillaSuperficies" class="table table-striped table-condensed table-bordered table-responsive">
                                                    <thead>
                                                        <tr>
                                                            <th>C&oacute;d. Terreno</th>
                                                            <th>Superficie</th>
                                                            <th>Elect/Gas</th>
                                                            <th>Puntaje</th>
                                                            <th>Pje. Sup.</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody />
                                                </table>
                                                @if (Model.Editable)
                                                {
                                                    <dl>
                                                        <dt><span id="btnAgregarSuperficie" class="fa fa-plus-circle fa-2x"></span></dt>
                                                        <dt><span id="btnEliminarSuperficie" class="fa fa-minus-circle fa-2x boton-deshabilitado"></span></dt>
                                                    </dl>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row detalle-aptitud" />
                        </div>
                    </div>
                    @if (Model.Editable)
                    {
                        <div class="modal-footer">
                            <div class="col-xs-4 pull-right">
                                <button type="submit" style="background: transparent;" data-placement="right" class="btn" title="Guardar" data-original-title="Guardar" id="btnGrabar">
                                    <span class="fa fa-save fa-2x black cursor-pointer"></span>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal fade theme_new" id="modal-detalle-valuacion" role="dialog" aria-hidden="true" data-backdrop="false" aria-labelledby="TituloDetalleValuacion" data-keyboard="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="TituloDetalleValuacion">Detalle de Valuaci&oacute;n</h3>
                <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
            </div>
            <div class="modal-body">
                <div class="body-content" id="detalle-content"></div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-4 pull-right">
                    <span role="button" aria-hidden="true" data-dismiss="modal" title="Confirmar" class="fa fa-check-circle fa-3x light-blue cursor-pointer"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade theme_new mensaje" id="modal-info-formulario" tabindex="-3" role="dialog" aria-labelledby="TituloInfoFormulario" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="TituloInfoFormulario">Titulo</h3>
                <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
            </div>
            <div class="modal-body">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <p>Descripcion de la informacion</p>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-4 pull-right">
                    <span role="button" aria-hidden="true" data-dismiss="modal" title="Seleccionar" class="fa fa-check-circle fa-3x light-blue cursor-pointer"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.js"></script>
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/Valuaciones/formulario.js"></script>

<script src="~/Scripts/Valuaciones/service.js"></script>
<script src="~/Scripts/Valuaciones/store.js"></script>
@if ((bool?)ViewData["esTemporal"] ?? false)
{
<script src="~/Scripts/Valuaciones/serviceTemporal.js"></script>
}

<script>
    let service = createService();
    const formulario = "#modal-formulario-valuacion";
    @if ((bool?)ViewData["esTemporal"] ?? false)
    {
    <text>
    service = createServiceTemporal(formulario, service);
    </text>
    }
    FormularioValuacionController(formulario,
                                    @Model.Editable.ToString().ToLower(),
                                    createStore(service, @Model.IdUnidadTributaria,@Model.IdDDJJ));
</script> 