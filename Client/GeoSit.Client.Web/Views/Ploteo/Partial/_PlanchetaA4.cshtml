@using GeoSit.Data.BusinessEntities.ModuloPloteo;
@model Plantilla

<div class="panel plantilla-detalle">
    <div class='panel-heading bg-primary'>
        <a href="javascript:void(0)">
            <div class="panel-title">@Model.Nombre</div>
        </a>
    </div>
    <div class="panel-body options-body">
        @Html.HiddenFor(model => model.IdPlantilla)
        <div class="grid-row">
            <div id="accordion-opciones-ploteo" class="section-position-ploteador">
                <div class="panel remove-shadow">
                    <div id="collapse-opciones" class="panel-collapse collapse in" aria-expanded="true">
                        <div class="col-xs-12">
                            <div class="panel-body">
                                <fieldset>
                                    @Html.Partial("Partial/_Transparencia", Model)
                                </fieldset>
                                <fieldset>
                                    <legend>Objetos</legend>
                                    <div class="form-group row">
                                        <div class="col-xs-12">
                                            <label class="cursor-pointer">
                                                <input style=" margin-top: 2px" class="rcheck" id="optZonaResultado" type="radio" name="optradio" checked />
                                                Objetos de Resultado
                                                <span class="badge" id="lblObjetosSeleccionados"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-xs-12">
                                            <label class="cursor-pointer">
                                                <input style=" margin-top: 2px" class="rcheck" id="optColeccion" type="radio" name="optradio" />
                                                Por Colección
                                                <span class="badge" id="lblColeccionCompuesta"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div id="divColeccionPlancheta" class="form-group row" style="display:none;">
                                        <div class="col-xs-6">
                                            <select class="form-control select2" id="cboColeccionesPlancheta">
                                                <option value="0">Seleccione una Colección</option>
                                                @foreach (var coleccion in ViewBag.Colecciones)
                                                {
                                                    <option value="@coleccion.ColeccionId">@coleccion.Nombre</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/Ploteo/ploteoPlancheta.js"></script>
<script>
    $(document).trigger({ type: "plantilla-cargada", controller: PloteoPlanchetaController() });
</script>
