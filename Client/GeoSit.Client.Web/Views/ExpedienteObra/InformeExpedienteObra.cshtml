@using GeoSit.Client.Web.Controllers
@model GeoSit.Client.Web.Models.ExpedientesObras.SearchViewModel

<div class="modal fade theme_new" id="modal-window-informe-expediente-obra" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="modal-windowLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">@Resources.Recursos.InformeExpedienteObras</h3>
                <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
            </div>
            <div class="modal-body informeexp-body">
                <div class="body-content informeexp-content">
                    <div class="panel-body">
                        @Html.HiddenFor(model => model.ExpresionRegularExpediente)
                        @Html.HiddenFor(model => model.ExpresionRegularLegajo)
                        @Html.HiddenFor(model => model.ExpresionRegularExpedienteVisible)
                        @Html.HiddenFor(model => model.ExpresionRegularLegajoVisible)
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-xs-2 text-right">@Resources.Recursos.Tipo</label>
                                <div class="col-xs-4">
                                    <label class="radio-inline">
                                        <input type="radio" name="tipoBusqueda" value="L" checked="checked"> Legajo
                                    </label>
                                </div>
                                <div class="col-xs-4">
                                    <label class="radio-inline">
                                        <input type="radio" name="tipoBusqueda" value="E"> Expediente
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="numero" class="col-xs-2 control-label text-right">N&uacute;mero</label>
                                <div class="col-xs-8">
                                    <input type="text" class="form-control" id="numero">
                                </div>
                            </div>
                        </div>
                        <small id="regularExpressionMessage" class="help-block hide" style="color: #a94442">El n&uacute;mero de 'Expediente de Obra' debe tener el siguiente formato: </small>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-xs-4 pull-right">
                    <span id="aceptar-informe-expediente-obra" aria-hidden="true" title="Aceptar" data-original-title="Aceptar" class="fa fa-check-circle fa-3x light-blue cursor-pointer"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Información-->
<div class="modal fade theme_new mensaje" id="ModalInfoInspector" tabindex="-3" role="dialog" aria-labelledby="TituloInfo" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="TituloInfoInspector">@Resources.Recursos.InformeExpedienteObras</h3>
                <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
            </div>
            <div class="modal-body">
                <div id="MensajeInfoInspector" class="alert alert-info alert-dismissible" role="alert">
                    <p id="DescripcionInfoInspector">Descripcion de la informacion</p>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-xs-4 pull-right">
                    <span id="btnAceptarAlert" aria-hidden="true" data-dismiss="modal" data-placement="right" title="Aceptar" data-original-title="Aceptar" class="fa fa-check-circle light-blue fa-3x cursor-pointer"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.inputmask.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.inputmask.regex.extensions.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Scripts/ExpedienteObra/InformeExpedienteObra.js"></script>