@model GeoSit.Client.Web.Models.PersonaModel
@{ 
    string backdrop = (bool)ViewData["esAltaBuscador"] ? "false" : "static";
}

<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/abmPersonas.css" rel="stylesheet" />

<div class="modal fade theme_new" id="modal-window-personas" tabindex="-1" data-backdrop="@backdrop" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="scroll-content">
                <div class="modal-header">
                    <h3 class="modal-title">Administrador de Personas</h3>
                    <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
                </div>
                <div class="modal-body administrador-body">
                    <div class="body-content administrador-content">
                        <div class="panel-group accordion">
                            <div class="panel remove-margin remove-shadow">
                                <div class="panel-heading bg-primary main-heading listado">
                                    <a href="javascript:void(0)">
                                        <div class="panel-title">
                                            Lista de Personas
                                        </div>
                                    </a>
                                </div>
                                <div class="panel-body">
                                    <form id="form-buscador" class="buscador">
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Buscar persona...">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="submit"><i class="fa-lg fa fa-search"></i></button>
                                                <button class="btn btn-default" type="reset"><i class="fa-lg fa fa-trash"></i></button>
                                            </span>
                                        </div>
                                    </form>
                                    <div class="resultados tabla-con-botones">
                                        <table id="grillaResultadoBusqueda" class="table table-striped table-condensed table-bordered table-responsive"></table>
                                        <dl>
                                            <dt><span title="Agregar Persona" id="btnAgregarPersona"><i class="fa fa-plus-circle fa-2x black"></i></span></dt>
                                            <dt><span title="Eliminar Persona" on-off id="btnEliminarPersona" class="disabled"><i class="fa fa-minus-circle fa-2x black"></i></span></dt>
                                            <dt><span title="Editar Persona" on-off id="btnModificarPersona" class="disabled"><i class="fa fa-pencil fa-2x black"></i></span></dt>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                            <div class="panel remove-margin remove-shadow">
                                <div class="panel-heading bg-primary main-heading">
                                    <a href="javascript:void(0)">
                                        <div class="panel-title">
                                            Detalle de Persona
                                        </div>
                                    </a>
                                </div>
                                <div class="panel-body">
                                    <ul class="nav nav-tabs" role="tablist">
                                        <li role="presentation" class="active">
                                            <a href="#info-persona" aria-controls="info-persona" role="tab" data-toggle="tab">General</a>
                                        </li>
                                        <li role="presentation">
                                            <a href="#domicilios" aria-controls="#domicilios" role="tab" data-toggle="tab">Domicilios</a>
                                        </li>
                                        <li role="presentation">
                                            <a href="#profesiones" aria-controls="#profesiones" role="tab" data-toggle="tab">Profesiones</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane active" id="info-persona">
                                            <div class="tab-content-data">
                                                <form id="form-persona" class="persona">
                                                    @Html.HiddenFor(model => model.PersonaId)
                                                    <div class="info-group">
                                                        <div class="data-item">
                                                            <label class="control-label">Nombres</label>
                                                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @readonly = "readonly" })
                                                        </div>
                                                        <div class="data-item">
                                                            <label class="control-label">Apellido</label>
                                                            @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", @readonly = "readonly" })
                                                        </div>
                                                        <div class="data-item">
                                                            <div class="info-group">
                                                                <div class="data-item">
                                                                    <label class="control-label">Tipo Documento</label>
                                                                    @Html.DropDownListFor(model => model.TipoDocId, (IEnumerable<SelectListItem>)ViewData["TiposDNI"], new { @class = "form-control", @disabled = "disabled" })
                                                                </div>
                                                                <div class="data-item">
                                                                    <label class="control-label">N&uacute;mero</label>
                                                                    @Html.TextBoxFor(model => model.NroDocumento, new { @class = "form-control", @readonly = "readonly" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="info-group">
                                                        <div class="data-item">
                                                            <label class="control-label">Tipo Persona</label>
                                                            @Html.DropDownListFor(model => model.TipoPersonaId, (IEnumerable<SelectListItem>)ViewData["TiposPersona"], new { @class = "form-control", @disabled = "disabled" })
                                                        </div>
                                                        <div class="data-item">
                                                            <label class="control-label">CUIL</label>
                                                            @Html.TextBoxFor(model => model.CUIL, new
                                                            {
                                                               @class = "form-control",
                                                               @readonly = "readonly",
                                                               placeholder = "00-00000000-0",
                                                               inputmode = "numeric"
                                                            })
                                                        </div>
                                                        <div class="data-item">
                                                            <label class="control-label">Nacionalidad</label>
                                                            @Html.DropDownListFor(model => model.Nacionalidad, (IEnumerable<SelectListItem>)ViewData["Nacionalidades"], new { @class = "form-control", @disabled = "disabled" })
                                                        </div>
                                                        <div class="data-item">
                                                            <label class="control-label">Sexo</label>
                                                            @Html.DropDownListFor(model => model.Sexo, (IEnumerable<SelectListItem>)ViewData["Sexos"], new { @class = "form-control", @disabled = "disabled" })
                                                        </div>
                                                    </div>
                                                    <div class="info-group">
                                                        <div class="data-item">
                                                            <label class="control-label">Estado Civil</label>
                                                            @Html.DropDownListFor(model => model.EstadoCivil, (IEnumerable<SelectListItem>)ViewData["EstadosCiviles"], new { @class = "form-control", @disabled = "disabled" })
                                                        </div>
                                                        <div class="data-item">
                                                            <label class="control-label">Tel&eacute;fono</label>
                                                            @Html.TextBoxFor(model => model.Telefono, new { @type = "tel", @class = "form-control", @readonly = "readonly" })
                                                        </div>
                                                        <div class="data-item">
                                                            <label class="control-label">Email</label>
                                                            @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control", @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <div role="tabpanel" class="tab-pane" id="domicilios">
                                            <div class="tab-content-data">
                                                <div class="tabla-con-botones">
                                                    <table id="grillaDomicilios" class="table table-striped table-condensed table-bordered table-responsive"></table>
                                                    <dl>
                                                        <dt><span title="Agregar Domicilio" id="btnAgregarDomicilio" class="hidden"><i class="fa fa-plus-circle fa-2x black"></i></span></dt>
                                                        <dt><span title="Eliminar Domicilio" on-off id="btnEliminarDomicilio" class="hidden disabled"><i class="fa fa-minus-circle fa-2x black"></i></span></dt>
                                                        <dt><span title="Editar Domicilio" on-off id="btnModificarDomicilio" class="hidden disabled"><i class="fa fa-pencil fa-2x black"></i></span></dt>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                        <div role="tabpanel" class="tab-pane" id="profesiones">
                                            <div class="tab-content-data">
                                                <div class="tabla-con-botones">
                                                    <table id="grillaProfesiones" class="table table-striped table-condensed table-bordered table-responsive"></table>
                                                    <dl>
                                                        <dt><span title="Agregar Profesi&oacute;n" id="btnAgregarProfesion" class="hidden"><i class="fa fa-plus-circle fa-2x black"></i></span></dt>
                                                        <dt><span title="Eliminar Profesi&oacute;n" on-off id="btnEliminarProfesion" class="hidden disabled"><i class="fa fa-minus-circle fa-2x black"></i></span></dt>
                                                        <dt><span title="Editar Profesi&oacute;n" on-off id="btnModificarProfesion" class="hidden disabled"><i class="fa fa-pencil fa-2x black"></i></span></dt>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer hidden">
                    <div class="col-xs-4 pull-right">
                        <span role="button" title="Guardar" id="btnGrabarPersona" class="cursor-pointer"><i class="fa fa-save fa-2x black"></i></span>
                        <span role="button" title="Cancelar" id="btnCancelarPersona" class="cursor-pointer"><i class="fa fa-undo fa-2x black"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="contenido-formulario" />

<div class="modal fade theme_new mensaje" id="modal-info-persona" tabindex="-3" role="dialog" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Titulo</h3>
                <span class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" title="Cerrar"></span>
            </div>
            <div class="modal-body">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <p>Descripcion de la informacion</p>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-xs-4 pull-right">
                    <span role="button" data-dismiss="modal" title="Aceptar" class="fa fa-check-circle fa-3x light-blue cursor-pointer"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.js"></script>
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/Personas/service.js"></script>
<script src="~/Scripts/Personas/store.js"></script>
<script src="~/Scripts/Personas/main.js"></script>

<script>
    AdministradorPersonasController("#modal-window-personas", createStore(createService()), @ViewData["esAltaBuscador"].ToString().ToLower());
</script>