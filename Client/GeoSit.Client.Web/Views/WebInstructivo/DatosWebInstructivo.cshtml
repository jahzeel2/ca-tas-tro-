@using GeoSit.Client.Web.Models;
@model List<WebInstructivoModel>

<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/webinstructivo.css" rel="stylesheet" />

<div class="modal fade theme_new instructivos" id="modal-window-webinstructivo" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="modal-windowLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="scroll-content-webinstructivo" class="scroll-content">
                <div class="modal-header">
                    <h3 class="modal-title col-xs-11">Instructivos</h3>
                    <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
                </div>
                <div class="modal-body webinstructivo-body">
                    <div id="body-content-webinstructivo" class="body-content">
                        <div class="panel-group accordion" id="accordion-webinstructivo">
                            @*Inicio Web Instructivo*@
                            <div class='panel-heading bg-primary main-heading' role='tab' id='headingwebinstructivo' style="pointer-events:none">
                                <a data-toggle='collapse' data-parent='#accordion-webinstructivo' href='#' aria-expanded='true'>
                                    <div class='panel-title'>
                                        Lista de Instructivos
                                    </div>
                                </a>
                            </div>
                            <div id="collapsewebinstructivo" class='panel-collapse collapse in main-collapse'>
                                <div class="panel-body webinstructivo-datos" style="margin-top: 0px; margin-bottom: 0; padding-top: 0px; padding-bottom: 0px">
                                    <div class="col-xs-12">
                                        <table id="Grilla_WebInstructivo" class="table table-striped table-bordered table-responsive">
                                            <thead>
                                                <tr>
                                                    <th class="hide"></th>
                                                    <th class="hide"> Seccion</th>
                                                    <th class="hide"> URL</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td class="hide">@item.IdInstructivo</td>
                                                        <td>@item.Seccion</td>
                                                        <td> <a style="padding-left: 10px" href='@item.URL' target="_blank">@item.Descripcion</a> </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            @*Fin Datos*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.dataTables.js"></script>
<script src="~/Scripts/SubSistemaWEB/WebInstructivo/main.js"></script>
