@model GeoSit.Client.Web.Models.ObrasPublicas.ZonaAtributoModel

<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />

<div class="modal fade theme_new" id="modal-window-zonas-atributos" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="modal-windowLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="lblModal">Atributo por Zona</h3>
                <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
            </div>
            <div class="modal-body atributozona-body">
                <div class="body-content atributozona-content">
                    <div class="panel remove-margin">
                        <div class="panel-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <table class="table table-striped table-bordered table-responsive" cellspacing="0" style="width:100%" id="tablaZona">
                                        <caption>@Resources.Recursos.Zonas</caption>
                                        <thead>
                                            <tr>
                                                <th class="hidden">Id</th>
                                                <th width="40%">@Resources.Recursos.Codigo</th>
                                                <th width="60%">@Resources.Recursos.Nombre</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                for (int i = 0; i < Model.Zonas.Count; i++)
                                                {
                                                    <tr class="filaZona">
                                                        <td class="hidden">@Model.Zonas[i].Id</td>
                                                        <td width="40%">@Model.Zonas[i].Codigo</td>
                                                        <td width="60%">@Model.Zonas[i].Nombre</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="checkbox remove-margin">
                                <label>
                                    <input type="checkbox" id="observaciones" name="Observaciones" checked> Imprime Observaciones
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-xs-4 pull-right">
                    <span id="aceptar-informe-periodo" aria-hidden="true" aria-controls="button" data-placement="right" title="Aceptar" data-original-title="Aceptar" class="fa fa-check-circle light-blue fa-3x cursor-pointer"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Información-->
<div class="modal fade theme_new mensaje" id="ModalInfoActa" tabindex="-3" role="dialog" aria-labelledby="TituloInfo" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="TituloInfoActa">Atributo por Zona</h3>
                <span aria-hidden="true" class="fa fa-close fa-2x white cursor-pointer pull-right" data-dismiss="modal" aria-label="Cerrar" title="Cerrar"></span>
            </div>
            <div class="modal-body">
                <div id="MensajeInfoActa" class="alert alert-info alert-dismissible" role="alert">
                    <h5 style="border:none;"><strong></strong></h5>
                    <p id="DescripcionInfoActa"></p>
                </div>
            </div>
            <div class="modal-footer" style="background-color:#ffffff;" id="botones-modal-info">
                <span id="btnAceptarAlert" aria-hidden="true" data-dismiss="modal" data-placement="right" title="Aceptar" data-original-title="Aceptar" class="fa fa-check-circle light-blue fa-3x cursor-pointer"></span>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/jquery.dataTables.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-calendar/components/underscore/underscore-min.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-calendar/js/language/es-ES.js"></script>
<script type="text/javascript" src="~/Scripts/ZonaAtributo/InformeAtributosZona.js"></script>






